
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span>Profile Edit</h1>
	<p><strong>Full name: </strong>{{user.first_name}} {{user.last_name}}</p>
	<p><strong>user name: </strong> {{user.user_name}}</p>


	<!-- show any messages that come back with authentication -->
  <!-- handlebars -->
  {{#if errors}}
        {{#each errors}}
          <div class="alert alert-danger">{{message}}</div>
        {{/each}}
  {{/if}}
	<!-- LOGIN FORM -->
	<form action="/editProfile" method="post">
		<div class="form-group">

		<div class="form-group">
			<label>First Name</label>
			<input type="text" class="form-control" name="firstname" value="{{user.first_name}}">
		</div>

		<div class="form-group">
			<label>last Name</label>
			<input type="text" class="form-control" name="lastname"  value="{{user.last_name}}">
		</div>

    <div class="form-group">
			<label>Gender</label>
			<input type="text" class="form-control" name="gender" value="{{user.user_gender}}">
		</div>

    <div class="form-group">
			<label>Age</label>
			<input type="text" class="form-control" name="age"  value="{{user.user_age}}">
		</div>

    <div class="form-group">
			<label>Weight</label>
			<input type="text" class="form-control" name="weight"  value="{{user.user_weight}}">
		</div>

    <div class="form-group">
			<label>Goals</label>
			<input type="text" class="form-control" name="goals"  value="{{user.fitness_goals}}">
		</div>



		<button type="submit" class="btn btn-default">Submit</button>
	</form>

	<hr>

	<!-- <p>Already have an account? <a href="/login">Login</a></p> -->

</div>

</div>